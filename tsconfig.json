{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "declaration": true,
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "test/**/*", "examples/main.ts", "server.ts"]
}
